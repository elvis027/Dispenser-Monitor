<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.BarChartFragment">

    <TextView
            android:text="清大圖書館"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/清大圖書館"
            android:textSize="25sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"/>
    <TextView
            android:text="乾洗手機"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/乾洗手機"
            android:textSize="19sp"
            app:layout_constraintStart_toEndOf="@+id/清大圖書館"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/清大圖書館"/>
    <TextView
            android:text="Date："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Date"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/清大圖書館"
            app:layout_constraintStart_toStartOf="@+id/清大圖書館"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/date_edittext"
            android:hint="Select Date"
            app:layout_constraintStart_toEndOf="@+id/Date"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/Date"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/enter_bar_chart_button"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Enter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/enter_bar_chart_button"
            app:layout_constraintTop_toTopOf="@+id/date_edittext"
            app:layout_constraintBottom_toBottomOf="@+id/date_edittext"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_bar_chart_textview"
            app:layout_constraintStart_toStartOf="@+id/Date"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Date"
            android:textSize="18sp"/>
    <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/total_bar_chart_textview"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="每小時使用次數"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/每小時使用次數"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bar_chart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="20sp"
            android:textStyle="bold"/>


</android.support.constraint.ConstraintLayout>